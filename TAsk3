let number = -7;
let description;

if (number === 0) {
  description = "нульове число";
} else if (number > 0) {
  if (number % 2 === 0) {
    description = "додатне парне число";
  } else {
    description = "додатне непарне число";
  }
} else {
  if (number % 2 === 0) {
    description = "від’ємне парне число";
  } else {
    description = "від’ємне непарне число";
  }
}

console.log(description);



 

